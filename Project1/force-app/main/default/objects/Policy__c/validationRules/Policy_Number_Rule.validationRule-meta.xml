<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Policy_Number_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>REGEX(PolicyOwnerPhone__c , &quot;(\\+1)?\\(?\\d{3}\\)?\\d{3}-\\d{4}&quot;)</errorConditionFormula>
    <errorDisplayField>PolicyOwnerPhone__c</errorDisplayField>
    <errorMessage>Please enter a valid phone number</errorMessage>
</ValidationRule>
